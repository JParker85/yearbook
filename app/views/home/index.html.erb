<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html>
<html>
  <head>
    <title>Yearbook</title>
    <%= csrf_meta_tags %>
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
      <%= stylesheet_link_tag    "application" %>
    </head>
    <body>
      <div class = "container">
        <header>
          <span class "logo">
            <img src ="assets/iron-yard-logo-final.png">
            </span>
            <span class = headerText>
              YEARBOOK
            </span>
            <span class = "headerLogin">
              <form name="input" method="get">
                <input type="text" name="user"placeholder="Username">
                  <input type="password" name="pwd"placeholder="Password">
                    <input type="submit" value="Login">
                    </form>
                  </span>
                </header>
                <div id="Users">
                </div>
                <script id="userTemplate" type="text/template">
                  <div class = "usersInfo">
                    <img src=<%%= picture %> alt="http://busdiv.scc.losrios.edu/images/faculty/female_silhouette_1.png">
                      <div class = 'userName'>
                        <%%= name %>
                      </div>
                    </div>
                  </script>
                  <div id="user">
                  </div>
                  <script id="userTemplate" type="text/template">
                    <ul class = "userInfo">
                      <li>
                        <img src=<%%= picture %> alt="http://busdiv.scc.losrios.edu/images/faculty/female_silhouette_1.png">
                        </li>
                        <li>
                          <%%= name %>
                        </li>
                        <li>Biography<%%= biography %>
                        </li>
                        <li>Twitter<%%= twitter %>
                        </li>
                        <li>GitHub<%%= gitHub %>
                        </li>
                        <li>LinkedIn<%%= linkedIn %>
                        </li>
                        <button id="Save">Save</button>
                      </ul>
                    </script>
                    <footer>
                      <span class "logo">
                        <img src ="assets/iron-yard-logo-final.png">
                      </span>
                      <span>The Iron Yard Yearbook Copywrite 2014, All Rights Reserved</span>
                      </footer>
                    </div>
                  </body>
                </html>
